<h1>Listing sites</h1>
 
<br />

<table class="table table-striped">
  <tr>
    <th>Post</th>
    <th>Site</th>
    <th colspan="2"></th>
  </tr>
 
  <% @sites.each do |site| %>
    <tr>
      <td><%= site.installation.installation if site.installation %></td>
      <td><%= site.name %></td>
      <td><%= link_to 'Show', site_path(site) %></td>
      <td><%= link_to 'Edit', edit_site_path(site) %>
      <% if current_user.has_role? :admin %>
        <%= link_to 'Delete', site_path(site), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<hr/>

<%= paginate @sites %>
