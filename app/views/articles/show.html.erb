<h1>Saved photo</h1>
<p>
  <strong>Language:</strong>
  <%= @article.language.name if @article.language.present? %>
</p>
<p>
  <strong>Category:</strong>
  <%= @article.category.name %>
</p>
<p>
  <strong>English Text:</strong>
  <%= @article.english %>
</p>
 
<p>
  <strong>Phonetic Text:</strong>
  <%= @article.phonetic %>
</p>
 
<p>
  <strong>Picture:</strong>
  <%= image_tag(@article.picture_url, width: 400) if @article.picture.present? %>
</p>

<%= link_to 'Back', articles_path %>

<% if can?(:delete, @article) && @article.draft? %>
  <%= link_to 'Publish', publish_article_path(@article), method: :post %>
<% else %>
  <%= link_to 'Unpublish', unpublish_article_path(@article), method: :post %>
<% end %>

<br />
<%= link_to 'Edit', edit_article_path(@article) %>
