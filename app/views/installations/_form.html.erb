<% if current_user.login_approval_at %>
<% if current_user.has_role? :admin %>
<div class="row">
  <div class="col-md-12">
    <%= form_for @installation, html: {class: "form-horizontal"} do |f| %>

    <%= render partial: "shared/error_messages", object: @installation %>

    <div class="form-group hidden">
      <%= f.label :organization_id, "Organization", class: "control-label col-sm-3" %>
      <div class="col-sm-3">
        <%= f.collection_select(:organization_id, Organization.all, :id, :name, prompt: true) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :installation, "Post", class: "control-label col-sm-3" %>
      <div class="col-sm-3">
        <%= f.text_field :installation, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "control-label col-sm-3" %>
      <div class="col-sm-3">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :address, class: "control-label col-sm-3" %>
      <div class="col-sm-5">
        <%= f.text_area :address, class: "form-control", cols: 40  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :contact, class: "control-label col-sm-3" %>
      <div class="col-sm-3">
        <%= f.text_field :contact, class: "form-control" %>
      </div>
    </div>

    <div class="form-group form-actions">
      <div class="col-sm-offset-3 col-sm-3">
        <button class="btn btn-primary" type="submit">Create Post</button>
      </div>
    </div>

    <% end %>
  </div>
</div>
<% end %>
<% end %>
